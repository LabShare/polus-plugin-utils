### Stage 1, build packages from source
FROM openjdk:8-slim

# Copy Python 3.8
COPY --from=python:3.8 / /

RUN apt-get update && \    
    pip3 install --upgrade pip --no-cache-dir

# Copy the requirements file
COPY ./requirements/requirements-base.txt ${EXEC_DIR}/
COPY ./requirements/requirements-java.txt ${EXEC_DIR}/

# Install requirements
RUN pip3 install --upgrade cython --no-cache-dir && \
    pip3 install -r  ${EXEC_DIR}/requirements-base.txt --no-cache-dir && \
    pip3 install -r  ${EXEC_DIR}/requirements-java.txt --no-cache-dir

RUN pip3 uninstall cython -y

### Things that change rarely between containers

# Create temporary folder
FROM openjdk:8-slim

COPY --from=python:3.8-slim / /

COPY --from=0 /usr/local/lib/python3.8/site-packages /usr/local/lib/python3.8/site-packages

ARG DATA_DIR="/data"
ARG EXEC_DIR="/opt/executables"
RUN mkdir -p ${EXEC_DIR}

### Things that change frequently between containers

# Copy bfio
COPY ./bfio/ ${EXEC_DIR}/bfio/
COPY ./setup.py ${EXEC_DIR}
COPY ./README.md ${EXEC_DIR}
COPY VERSION ${EXEC_DIR}

# Install bfio, remove the source directory
RUN readlink -f /usr/local/lib/python3.8/site-packages/bioformats/jars/bioformats_package.jar

RUN pip3 install ${EXEC_DIR}/ --no-cache-dir && \
    rm -rf ${EXEC_DIR} && \
    rm /usr/local/lib/python3.8/site-packages/bioformats/jars/bioformats_package.jar
