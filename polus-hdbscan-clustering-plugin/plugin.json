{
    "name": "HDBSCAN Clustering",
    "version": "0.4.1",
    "title": "HDBSCAN Clustering",
    "description": "Cluster the data using HDBSCAN.",
    "author": "Jayapriya Nagarajan (jayapriya.nagarajan@nih.gov)",
    "institution": "National Center for Advancing Translational Sciences, National Institutes of Health",
    "repository": "https://github.com/labshare/polus-plugins",
    "website": "https://ncats.nih.gov/preclinical/core/informatics",
    "citation": "",
    "containerId": "labshare/polus-hdbscan-clustering-plugin:0.4.1",
    "inputs": [      
      {
        "name": "inpdir",
        "type": "csvCollection",
        "description": "Input csv file collection",
        "required": "true"
      },
      {
	"name": "minclustersize",
        "type": "integer",
        "description": "Enter minimum cluster size:",
        "required": "true"
      },
      {
	"name": "avgpattern",
        "type": "string",
        "description": "Enter regular expression with capture group to average and cluster data:",
        "required": "false"
      },
      {
	"name": "pattern",
        "type": "string",
        "description": "Enter regular expression with capture group to cluster each group separately:",
        "required": "false"
      },
      {
	"name": "outlierclusterID",
        "type": "boolean",
        "description": "Set outlier cluster ID as 1",
        "required": "false"
      }
    ],
    "outputs": [
      {
        "name": "outdir",
        "type": "csvCollection",
        "description": "Output collection"
      }
    ],
    "ui": [
      {
        "key": "inputs.inpdir",
        "title": "Input csv file",
        "description": "Input csv file for clustering"
      },
      {
        "key": "inputs.minclustersize",
        "title": "Minimum cluster size",
        "description": "Enter minimum cluster size:"
      },
      {
        "key": "inputs.avgpattern",
        "title": "Average Pattern",
        "description": "Enter regular expression with capture group to average and cluster data:"
      },
      {
        "key": "inputs.pattern",
        "title": "Pattern",
        "description": "Enter regular expression with capture group to cluster each group separately:"
      },
      {
        "key": "inputs.outlierclusterID",
        "title": "Outlier cluster ID",
        "description": "Set outlier cluster ID as 1"
      }
    ]
  }
