{
  "name": "ImageJ filter gauss",
  "version": "0.2.0",
  "title": "ImageJ filter gauss",
  "description": "GaussRAISingleSigma, DefaultGaussRAI",
  "author": "Benjamin Houghton (benjamin.houghton@axleinfo.com)",
  "institution": "National Center for Advancing Translational Sciences, National Institutes of Health",
  "repository": "https://github.com/labshare/polus-plugins",
  "website": "https://ncats.nih.gov/preclinical/core/informatics",
  "citation": "",
  "containerId": "polusai/imagej-filter-gauss-plugin:0.2.0",
  "inputs": [
    {
      "name": "opName",
      "type": "enum",
      "options": {
        "values": ["GaussRAISingleSigma",
                    "DefaultGaussRAI"]
      },
      "description": "Operation to peform",
      "required": true
    },
    {
      "name": "inpDir",
      "type": "collection",
      "description": "Input image collection to be processed by this plugin",
      "required": true
    },
    {
      "name": "sigma",
      "type": "number",
      "description": "sigma",
      "required": false
    },
    {
      "name": "sigmas",
      "type": "array",
      "description": "sigmas",
      "required": false,
      "options":{
        "items":{
          "type":"string",
          "title":"sigmas",
          "widget":"string"
        }
      }
    }
  ],
  "outputs": [
    {
      "name": "outDir",
      "type": "collection",
      "description": "Output collection"
    }
  ],
  "ui": [
    {
      "key": "inputs.opName",
      "title": "Operation",
      "description": "Operation to peform"
    },
    {
      "key": "inputs.inpDir",
      "title": "inpDir",
      "description": "Input image collection to be processed by this plugin",
      "condition": "model.inputs.opName==GaussRAISingleSigma or model.inputs.opName==DefaultGaussRAI"
    },
    {
      "key": "inputs.sigma",
      "title": "sigma",
      "description": "sigma",
      "condition": "model.inputs.opName==GaussRAISingleSigma"
    },
    {
      "key": "inputs.sigmas",
      "title": "sigmas",
      "description": "sigmas",
      "condition": "model.inputs.opName==DefaultGaussRAI"
    }
  ]
}